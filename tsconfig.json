{
    "compilerOptions": {
        "allowJs": true,
        "allowUnreachableCode": true,
        "alwaysStrict": true,
        "module": "commonjs",
        "outDir": "lib",
        "removeComments": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "target": "es2015",
        "lib": [
            "es2015"
        ]
    },

    "include": [
        "src"
    ],

    "exclude": [
        "node_modules"
    ]
}